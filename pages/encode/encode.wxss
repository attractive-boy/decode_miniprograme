/* pages/encode/encode.wxss */
.external-class {
  padding: 32rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.button-example {
  margin: 0 32rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 40rpx;
}

.result-container {
  margin: 0 32rpx;
  padding: 24rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  max-height: 200rpx;
  overflow-y: auto;
}

.result-text {
  word-break: break-all;
  font-size: 28rpx;
  flex: 1;
}

.result-content {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.copy-btn {
  flex-shrink: 0;
}
.external-class {
  height: 256rpx;
}
.button-example {
  margin: 32rpx;
  position: absolute;
  bottom: 10%;
  width: calc(100% - 64rpx);
}